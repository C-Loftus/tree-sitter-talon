{
  "name": "tree-sitter-talon",
  "version": "4.1.0",
  "description": "Talon grammar for tree-sitter",
  "main": "bindings/node",
  "types": "bindings/node",
  "scripts": {
    "generate": "tree-sitter generate",
    "build": "npm run prebuildify && tree-sitter build --wasm",
    "pretest": "npm run build",
    "test": "tree-sitter test && jest && script/parse-examples && script/parse-examples wasm",
    "test-update": "npm run pretest && tree-sitter test --update",
    "bump": "pipx run bumpver update",
    "install": "node-gyp-build",
    "prepublish": "npm run build",
    "prebuildify": "prebuildify --napi --strip"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wenkokke/tree-sitter-talon.git"
  },
  "keywords": [
    "parser",
    "lexer"
  ],
  "files": [
    "grammar.js",
    "binding.gyp",
    "prebuilds/**",
    "bindings/node/*",
    "queries/*",
    "src/**"
  ],
  "author": "Wen Kokke",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wenkokke/tree-sitter-talon/issues"
  },
  "homepage": "https://github.com/wenkokke/tree-sitter-talon#readme",
  "dependencies": {
    "node-addon-api": "^7.1.0",
    "node-gyp-build": "^4.8.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "tree-sitter-cli": "^0.22.6",
    "web-tree-sitter": "^0.22.6",
    "prebuildify": "^6.0.0"
  },
  "peerDependencies": {
    "tree-sitter": "^0.21.1"
  },
  "tree-sitter": [
    {
      "scope": "source.talon",
      "file-types": [
        "talon"
      ]
    }
  ]
}
